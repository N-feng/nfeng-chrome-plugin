{
	"manifest_version": 2,
	"name": "nfeng-chrome-plugin",
	"version": "1.0.0",
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"browser_action": {
		"default_popup": "/popup/popup.html"
	},
	"permissions": [
		"declarativeContent",
		"contextMenus",
		"tabs",
		"downloads"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"lib/jquery-1.8.3.js",
				"js/content-script.js",
				"js/common.js",
				"js/imageDownloader.js"
			],
			"css": [
				"css/custom.css"
			],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		"js/inject.js"
	],
	"omnibox": {
		"keyword": "nf"
	},
	"devtools_page": "devtools.html"
}